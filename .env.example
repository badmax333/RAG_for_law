# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# LLM Configuration
# USE_API=true - использовать Mistral API (рекомендуется, не требует много RAM)
# USE_API=false - использовать локальную модель (требует 14+ GB RAM)
USE_API=true

# Mistral AI API Configuration (только если USE_API=true)
# Получите API ключ на https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here
# Доступные модели: mistral-small-latest, mistral-medium-latest, mistral-large-latest
MISTRAL_MODEL=mistral-small-latest

# Logging
LOG_LEVEL=INFO

# RAG Pipeline Settings
TOP_K_DEFAULT=5
HISTORY_MAX=30
LLM_TIMEOUT_SEC=35

# Data paths
PDD_PATH=data/pdd.json
FAISS_CACHE_DIR=faiss_langchain_cache
